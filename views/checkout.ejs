<%include partials/header%>
    <div class="cart__page">
        <section class="section-checkout" id="section-checkout">
            <div class="u-center-text u-margin-bottom-big">
                <h2 class="heading-secondary">
                    checkout
                </h2>    
            </div>
            
            <div class="shopping-cart__total-row">
                <span class="shopping-cart__row--name">
                    Amount Payable
                </span> 
                <span class="shopping-cart__row--price">
                     rs.<%=total%>
                </span>
            </div>
            <%if(!noErrors){%>
                <div id="charge-error">
                    <%=errMsg%>
                </div>
            <%}%>
            
            <form method="post" action="/checkout" id="checkout-form">
        		<label for="name">Name</label>
        		<input type="text" id="name" required><br>
        		<label for="address">Address</label>
        		<input type="text" id="address" required><br>
        		<label for="card-name">Card Holder Name</label>
        		<input type="text" id="card-name" required><br>
        		<label for="card-number">Credit/Debit Card Number</label>
        		<input type="text" name="card-number" id="card-number" required><br>
        		<label for="card-expiry-month">Expiration Month</label>
        		<input type="text" id="card-expiry-month" required><br>
        		<label for="card-expiry-year">Expiration Year</label>
        		<input type="text" id="card-expiry-year" required><br>
        		<label for="card-cvc">CVC</label>
        		<input type="text" id="card-cvc" required><br>
        		<button type="submit">Make Payment</button><br>
        	</form>
        </section>
    </div>
    
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
	<script type="text/javascript" src="/javascript/checkout.js"></script>

<%include partials/footer%>