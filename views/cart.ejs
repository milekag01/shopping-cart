<%include partials/header%>

    <div class="cart__page">
        <section class="section-cart" id="section-cart">
            <div class="u-center-text u-margin-bottom-big">
                <h2 class="heading-secondary">
                    my cart
                </h2>    
            </div>
        
            <div class="shopping-cart">
                <%if(products && products.length>0){%>
                    <%products.forEach(function(product){%>
                        <div class="shopping-cart__row">
                            <span class="shopping-cart__row--name"><%=product.item.name%></span>
                            <span class="shopping-cart__row--price">Rs.<%=product.price%></span>
                            <span class="shopping-cart__row--quantity">qty: <%=product.qty%></span>
                            
                            <div class="shopping-cart__row--buttons">
                                <a href="/reduce/<%=product.item._id%>"><button class="remove btn-remove">Remove One</button></a>
                                <a href="/remove/<%=product.item._id%>"><button class="remove btn-remove">Remove All</button></a>
                            </div>
                        </div>
                    <%})%>
                    
                <%}else{%>
                    <img class="cart__empty" src="http://www.comtechs.ca/images/Laptop.png" alt="laptopImg">
                    <div class="u-center-text u-margin-bottom-big">
                        <h2 class="heading-secondary">
                            Your cart is empty
                        </h2>    
                    </div>
                <%}%>
            </div>
            
            <%if( products && products.length>0){%>
                <div class="shopping-cart__total-row">
                    <span class="shopping-cart__row--name">
                        Amount Payable
                    </span> 
                    <span class="shopping-cart__row--price">
                         rs.<%=totalPrice%>
                    </span>
                    <span class="shopping-cart__total-row--button">
                        <a href="/checkout"><button class="remove btn-remove">Place Order</button></a>
                    </span>    
                </div>
            <%}%>
               
            
        </section>
    </div>
<%include partials/footer%>